<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:gravity="center_vertical"
    tools:background="@color/material_gray_300">

    <View
        android:id="@+id/item_view_category_color"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        tools:background="@color/material_red" />

    <TextView
        android:id="@+id/item_view_category_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/item_view_category_color"
        android:gravity="center"
        tools:text="Color Name" />

</RelativeLayout>