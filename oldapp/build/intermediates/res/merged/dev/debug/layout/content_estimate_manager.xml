<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/estimate_manager_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="300dp"
    android:orientation="vertical"
    tools:showIn="@layout/dialog_estimate_manager">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_loyalty_black"
            android:tint="@color/material_amber" />

        <AutoCompleteTextView
            android:id="@+id/estimate_manager_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight=".5"
            android:inputType="textAutoCorrect|textCapWords"
            android:isScrollContainer="true"
            tools:text="Primary" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_loyalty_black"
            android:tint="@color/material_amber" />

        <AutoCompleteTextView
            android:id="@+id/estimate_manager_category_secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:inputType="textAutoCorrect|textCapWords"
            android:isScrollContainer="true"
            tools:text="Secondary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_today_black"
            android:tint="@color/material_amber" />

        <EditText
            android:id="@+id/estimate_manager_date_lanc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight=".5"
            android:inputType="number"
            android:isScrollContainer="true"
            tools:text="01" />

        <ImageView
            android:id="@+id/estimate_manager_value_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_attach_money_black"
            android:tint="@color/material_amber" />

        <EditText
            android:id="@+id/estimate_manager_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:inputType="numberDecimal"
            android:isScrollContainer="true"
            tools:text="0.000,00" />

    </LinearLayout>

</LinearLayout>
