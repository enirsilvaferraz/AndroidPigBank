<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_marginStart="4dp"
        android:gravity="center_vertical">

        <com.system.androidpigbank.views.RoundedImageView
            android:id="@+id/item_transaction_rounded_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp" />

        <RelativeLayout
            android:id="@+id/item_transaction_container_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="4dp">

            <TextView
                android:id="@+id/item_transaction_content"
                style="@style/AppTheme.TextView.Card.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/item_transaction_date"
                android:ellipsize="end"
                android:lines="1"
                tools:text="Lanche na padaria do ZÃ©" />

            <TextView
                android:id="@+id/item_transaction_date"
                style="@style/AppTheme.TextView.Card.Content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_transaction_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="3dp"
                android:textColor="@color/material_amber"
                tools:text="04/01/2016" />

            <TextView
                android:id="@+id/item_transaction_category"
                style="@style/AppTheme.TextView.Card.Content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_transaction_content"
                android:layout_marginTop="3dp"
                tools:text="Lunch" />

            <TextView
                android:id="@+id/item_transaction_value"
                style="@style/AppTheme.TextView.Card.Content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_transaction_category"
                android:layout_alignParentEnd="true"
                tools:text="R$ 10,00" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>