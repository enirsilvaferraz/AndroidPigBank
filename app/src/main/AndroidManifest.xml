<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.system.androidpigbank">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controllers.activities.TransactionManagerActivity"
            android:label="@string/title_activity_transaction_manager"
            android:windowSoftInputMode="stateVisible"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controllers.activities.TransactionDetailActivity"
            android:label="@string/title_activity_transaction_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controllers.activities.TransactionHistoryTabActivity"
            android:label="@string/title_activity_transaction_history"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.activities.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
