<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <com.system.androidpigbank.views.RoundedTextView
            android:id="@+id/item_transaction_rounded_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:transitionName="TRNAME_ICON" />

        <LinearLayout
            android:id="@+id/item_transaction_container_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_transaction_content"
                style="@style/AppTheme.TextView.Card.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Lanche na padaria do ZÃ©" />

            <TextView
                android:id="@+id/item_transaction_category"
                style="@style/AppTheme.TextView.Card.Content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Lunch" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_transaction_value"
            style="@style/AppTheme.TextView.Card.Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:gravity="end"
            android:text="R$ 10,00"
            android:textSize="20sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/divider" />

</android.support.v7.widget.CardView>