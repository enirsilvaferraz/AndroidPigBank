<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.system.androidpigbank">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".controllers.activities.TransactionManagerActivity"
            android:label="@string/title_activity_transaction_manager"
            android:theme="@style/AppTheme.Red"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".controllers.activities.TransactionDetailActivity"
            android:label="@string/title_activity_transaction_detail"
            android:theme="@style/AppTheme.Green" />
        <activity
            android:name=".controllers.activities.TransactionHistoryTabActivity"
            android:label="@string/title_activity_transaction_history"
            android:theme="@style/AppTheme.Blue">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".models.business.BackupService"
            android:exported="false" />
        <service
            android:name=".models.business.RecoverService"
            android:exported="false"></service>
    </application>

</manifest>