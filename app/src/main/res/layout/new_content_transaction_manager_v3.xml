<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_white"
    android:orientation="vertical">

    <!-- STEP 1 - DATA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_linear_button"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            style="@style/AppTheme.Linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.TextView.Card.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction Date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="01/01/2000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_gray_200"
            android:gravity="center_horizontal"
            android:minHeight="150dp">

            <CalendarView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- STEP 2 - DATA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_linear_button"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            style="@style/AppTheme.Linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.TextView.Card.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="01/01/2000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_gray_200"
            android:gravity="center_horizontal"
            android:minHeight="150dp">

            <CalendarView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- STEP 3 - VALOR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_linear_button"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            style="@style/AppTheme.Linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.TextView.Card.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Value" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="R$ 1000,00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_gray_200"
            android:gravity="center_horizontal">

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:hint="R$ 0,00"
                android:textSize="40sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- STEP 4 - PAYMENT TYPE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_linear_button"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            style="@style/AppTheme.Linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_white"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.TextView.Card.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment type" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Credit Card" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_gray_200"
            android:gravity="center">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

    <!-- STEP 5 - CATEGORIES -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_linear_button"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            style="@style/AppTheme.Linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.TextView.Card.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primary Category" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Moradia" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_gray_200"
            android:gravity="center">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

    <!-- STEP 6 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_linear_button"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            style="@style/AppTheme.Linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.TextView.Card.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secundary Category" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Aluguel" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_gray_200"
            android:gravity="center">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

    <!-- STEP 7 - NOTES -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_linear_button"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            style="@style/AppTheme.Linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_white"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.TextView.Card.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                tools:text="Loren ipson alpha beta gama delta" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_gray_200"
            android:minHeight="100dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:padding="16dp"
                tools:text="Loren ipson alpha beta gama deltaLoren ipson alpha beta gama deltaLoren ipson alpha beta gama deltaLoren ipson alpha beta gama deltaLoren ipson alpha beta gama deltaLoren ipson alpha beta gama delta" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_linear_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/material_gray_200"
        android:gravity="center_vertical|end">

        <Button
            android:id="@+id/transaction_manager_bt_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="16dp"
            android:background="?selectableItemBackgroundBorderless"
            android:minWidth="64dp"
            android:padding="16dp"
            android:text="Next" />

    </LinearLayout>

</RelativeLayout>