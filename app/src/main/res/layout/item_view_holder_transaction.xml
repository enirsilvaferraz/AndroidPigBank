<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.system.androidpigbank.views.RoundedView
            android:id="@+id/item_transaction_rounded_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/item_transaction_content"
            style="@style/AppTheme.TextView.Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/item_transaction_rounded_view"
            android:text="Lanche na padaria do ZÃ©"/>

        <TextView
            android:id="@+id/item_transaction_category"
            style="@style/AppTheme.TextView.Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_transaction_content"
            android:layout_toEndOf="@+id/item_transaction_rounded_view"
            android:text="Lunch"/>

        <TextView
            android:id="@+id/item_transaction_value"
            style="@style/AppTheme.TextView.Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_transaction_content"
            android:layout_toEndOf="@+id/item_transaction_category"
            android:text="R$ 10,00"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>